                                    <Setter Property="Source" Value="Images/l2.png"></Setter>
                                    <Setter Property="Width" Value="16"></Setter>
                                    <Setter Property="Height" Value="13"></Setter>
                                    <Setter Property="Opacity" Value="1"></Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
                <Image Name="square" MouseDown="square_MouseDown">
                    <Image.Style>
                        <Style TargetType="{x:Type Image}">
